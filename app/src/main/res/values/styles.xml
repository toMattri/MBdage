<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_first_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="toolbarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorSecondary</item>
    </style>

    <style name="defaultText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="defaultTextNight" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Animation"/>

    <style name="Animation.showDialog">
        <item name="android:windowEnterAnimation">@anim/fromdown</item>
        <item name="android:windowExitAnimation">@anim/pushdown</item>
    </style>
    <style name="Animation.showDialogSetting">
        <item name="android:windowEnterAnimation">@anim/fromup</item>
        <item name="android:windowExitAnimation">@anim/pushdown</item>
    </style>

    <style name="Animation.Varco">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/pushdown</item>
    </style>

</resources>