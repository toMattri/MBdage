<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MBdage" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorSecondaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primaryLightColor</item>

        <item name="colorError">@color/red</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorOnPrimarySurface">@color/black</item>
        <item name="colorOnSurface">@color/black</item>

        <item name="android:buttonStyle">@style/defaultButton</item>
        <item name="android:textViewStyle">@style/defaultText</item>

    </style>

    <style name="Theme.Transparent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@drawable/background_shader</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorSecondaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/primaryLightColor</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

</resources>